Algoritmo "termo PA"

Var
   an,a1,n,r:inteiro
   soma:real


Inicio
   escreval("Escreva Primeiro termo:")
   leia(a1)

   escreval ("Escreva a razão:")
   leia(r)

   escreval ("Escreva ultimo termo:")
   leia(n)

   soma:= a1+(n-1)*r
   escreval()

   escreval("O ultimo termo é:", soma)





Fimalgoritmo